{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ProjectProgressLog",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "Date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Date in YYYY-MM-DD format"
            },
            "Tag": {
                "type": "string",
                "description": "Optional tag for context, e.g., 'Coding', 'Design', etc."
            },
            "Interval": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "Goals": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Simple to-do list for this interval"
                        },
                        "Notes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Optional notes or logs for tasks you completed"
                        },
                        "Start": {
                            "type": "string",
                            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
                            "description": "Start time in HH:MM (24-hour) format"
                        },
                        "End": {
                            "type": "string",
                            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
                            "description": "End time in HH:MM (24-hour) format"
                        },
                        "Duration": {
                            "type": "number",
                            "description": "Duration in minutes"
                        }
                    },
                    "required": ["Goals", "Start", "End", "Duration"]
                }
            }
        },
        "required": ["Date", "Interval"]
    }
}
